require 'Xinc.php';

// defaults.
$configFile = 'config.xml';
$pluginConfigFile = 'plugins.xml';
$logDir = 'log';
$logFile = $logDir . '/xinc.xml';
$statusDir = $logDir . '/xinc';

// parse arguments for config and log file locations. 
// @todo improve, give usage.
for ($i = 0; $i < count($argv); $i++) {
	if ($argv[$i] == '-f' && isset($argv[$i+1])) {
		$configFile = $argv[$i+1];
	} elseif ($argv[$i] == '-p' && isset($argv[$i+1])) {
		$pluginConfigFile = $argv[$i+1];
	} elseif ($argv[$i] == '-l' && isset($argv[$i+1])) {
		$logFile = $argv[$i+1];
	} elseif ($argv[$i] == '-s' && isset($argv[$i+1])) {
		$statusDir = $argv[$i+1];
	}
}

// if log/status defaults are being used ensure the directories exist
if (count($parts = explode('/', $logFile)) && $parts[0] == $logDir) {
    if (!file_exists($logDir)) {
        mkdir($logDir);
    }
    if (!file_exists($statusDir)) {
        mkdir($statusDir);
    }
}

// run xinc.
Xinc::main($configFile, $pluginConfigFile, $logFile, $statusDir);