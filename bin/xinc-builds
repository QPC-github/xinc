require 'Xinc/Ini.php';
require 'Xinc/Build/History.php';

$args = $_SERVER['argv'];
array_shift($args);
$command = $args[0];

switch ($command) {
    
    case 'delete':
        /**
         * xinc-builds delete PROJECT BUILDTIMESTAMP [TOTIMESTAMP]
         */
        if (isset($args[1]) && isset($args[2]) && isset($args[3])) {
            $res = Xinc_Build_History::deleteBuilds($args[1], $args[2], $args[3]);
        } else if (isset($args[1]) && isset($args[2])) {
            $res = Xinc_Build_History::deleteBuild($args[1], $args[2]);
            if ($res) {
                echo "[OK] Build of Project: " . $args[1] . " with Build Timestamp:". $args[2] . " successfully deleted";
            } else {
                echo "[NOK] Build of Project: " . $args[1] . " with Build Timestamp:". $args[2] . " could not be deleted";
            }
        }
        break;

}