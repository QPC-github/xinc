<?xml version="1.0"?>
<project name="Xinc-Publisher" basedir="." default="build">
	
	<target name="build" depends="prepare, tar">	
	</target>
	<target name="prepare">
		<mkdir dir="${project.basedir}/builds"/>
	</target>
	 <target name="tar">
	    	<tar destfile="${project.basedir}/builds/xinc-2.0-pre.${xinc.buildlabel}.tar.gz" compression="gzip">
				 <fileset dir=".">
					 <include name="bin/*/**" />
				 	 <include name="etc/*/**" />
				 	 <include name="classes/*/**" />
				 	<include name="examples/*/**" />
				 	<include name="web/*/**" />
				 	<include name="resources/*/**" />
				 	<include name="resources/*/**" />
				 	<include name="install.sh"/>
				 	<include name="README.txt"/>
				 	<exclude name=".svn" />
				 	<exclude name="*/**/.svn" />
				 </fileset>
				</tar>
	    </target>
</project>