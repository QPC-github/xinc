<?xml version="1.0"?>
<project name="Xinc-Publisher" basedir="." default="build">
	
	<target name="build" depends="prepare, tar">	
	</target>
	<target name="prepare">
		<mkdir dir="${project.basedir}/builds"/>
		<mkdir dir="${project.basedir}/builds/xinc-2.0-pre"/>
	</target>
	 <target name="tar">
	 	<copy todir="${project.basedir}/builds/xinc-2.0-pre">
	 		<fileset dir=".">
	 							 <include name="bin/*/**" />
	 						 	 <include name="etc/*/**" />
	 						 	 <include name="classes/*/**" />
	 						 	<include name="examples/*/**" />
	 						 	<include name="web/*/**" />
	 						 	<include name="resources/*/**" />
	 						 	<include name="resources/*/**" />
	 						 	<include name="install.sh"/>
	 						 	<include name="README.txt"/>
	 						 	<exclude name=".svn" />
	 						 	<exclude name="*/**/.svn" />
	 						 </fileset>
	 	</copy>
	    	<tar destfile="${project.basedir}/builds/xinc-2.0-pre.tar.gz" compression="gzip">
				 <fileset dir="${project.basedir}/builds/">
				 	<include name="xinc-2.0-pre"/>
	    		</fileset>
				</tar>
	    </target>
</project>