<?xml version="1.0"?>
<project name="Xinc Build File For Deployment" basedir="." default="deploy">	
	

	<target name="deploy" depends="install, restart">
	<!-- Calls the install script and then restarts xinc -->
  	</target>
	<target name="install">
		<exec command="./install.sh --non-interactive" dir="${project.basedir}" checkreturn="true"/>
	</target>
	
	<target name="restart">
		<!-- Sleeping 15seconds before restarting, will give us enough time to publish the artifacts-->
		<exec command="/etc/init.d/xinc restart" spawn="true" dir="${project.basedir}"/>
	</target>
  	

</project>